<% content_for :title, "Booking Confirmed - #{@business.name}" %>

<div class="max-w-3xl mx-auto">
  <!-- Success Message -->
  <div class="bg-green-50 border border-green-200 rounded-2xl p-6 mb-6">
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0">
        <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h1 class="text-2xl font-display font-bold text-green-900">Booking Confirmed!</h1>
        <p class="text-green-700 mt-1">Your appointment has been successfully booked.</p>
      </div>
    </div>
  </div>

  <!-- Booking Reference -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
    <div class="text-center">
      <p class="text-sm text-slate-500 mb-1">Booking Reference</p>
      <p class="text-3xl font-display font-bold text-slate-900">#<%= @booking.id.to_s.rjust(6, '0') %></p>
      <div class="inline-flex items-center gap-2 mt-3 px-3 py-1 bg-amber-50 border border-amber-200 rounded-full">
        <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
        <span class="text-sm font-medium text-amber-700"><%= @booking.status.titleize %></span>
      </div>
    </div>
  </div>

  <!-- Business Information -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Business Details</h2>

    <div class="flex items-start gap-4">
      <% if @business.logo.attached? %>
        <%= image_tag @business.logo, class: "w-16 h-16 rounded-xl object-cover flex-shrink-0" %>
      <% else %>
        <div class="w-16 h-16 rounded-xl bg-primary-100 flex items-center justify-center flex-shrink-0">
          <span class="text-2xl font-bold text-primary-600"><%= @business.name[0].upcase %></span>
        </div>
      <% end %>

      <div class="flex-1 min-w-0">
        <h3 class="font-semibold text-slate-900"><%= @business.name %></h3>

        <div class="space-y-2 mt-3 text-sm text-slate-600">
          <% if @business.address.present? %>
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span><%= @business.address %></span>
            </div>
          <% end %>

          <% if @business.phone.present? %>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <a href="tel:<%= @business.phone %>" class="hover:text-primary-600"><%= @business.phone %></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Appointment Details -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Appointment Details</h2>

    <!-- Date & Time -->
    <div class="flex items-start gap-4 pb-4 border-b border-slate-100">
      <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="flex-1">
        <p class="text-sm text-slate-500">Date & Time</p>
        <p class="font-semibold text-slate-900 mt-0.5">
          <%= @booking.scheduled_at.strftime("%A, %B %d, %Y") %>
        </p>
        <p class="text-slate-700 mt-0.5">
          <%= @booking.scheduled_at.strftime("%I:%M %p") %> - <%= @booking.end_time.strftime("%I:%M %p") %>
        </p>
      </div>
    </div>

    <!-- Services -->
    <div class="pt-4">
      <p class="text-sm text-slate-500 mb-3">Services</p>
      <div class="space-y-3">
        <% @booking.services.each do |service| %>
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <p class="font-medium text-slate-900"><%= service.name %></p>
              <p class="text-sm text-slate-500 mt-0.5"><%= service.duration_minutes %> minutes</p>
            </div>
            <p class="font-semibold text-slate-900 flex-shrink-0">
              <%= number_to_currency(service.price.to_f , unit: "₫", separator: ".", delimiter: ",", format: "%n %u") %>
            </p>
          </div>
        <% end %>
      </div>

      <!-- Total -->
      <div class="flex items-center justify-between gap-4 pt-4 mt-4 border-t border-slate-100">
        <div>
          <p class="font-semibold text-slate-900">Total</p>
          <p class="text-sm text-slate-500"><%= @booking.total_duration_minutes %> minutes</p>
        </div>
        <p class="text-2xl font-display font-bold text-slate-900">
          <%= number_to_currency(@booking.services.sum(:price_cents).to_f , unit: "₫", separator: ".", delimiter: ",", format: "%n %u") %>
        </p>
      </div>
    </div>
  </div>

  <!-- Customer Information -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Your Information</h2>

    <div class="space-y-3 text-sm">
      <div class="flex items-center gap-3">
        <span class="text-slate-500 w-20">Name:</span>
        <span class="font-medium text-slate-900"><%= @booking.customer_name %></span>
      </div>

      <div class="flex items-center gap-3">
        <span class="text-slate-500 w-20">Phone:</span>
        <a href="tel:<%= @booking.customer_phone %>" class="font-medium text-slate-900 hover:text-primary-600">
          <%= @booking.customer_phone %>
        </a>
      </div>

      <% if @booking.customer_email.present? %>
        <div class="flex items-center gap-3">
          <span class="text-slate-500 w-20">Email:</span>
          <a href="mailto:<%= @booking.customer_email %>" class="font-medium text-slate-900 hover:text-primary-600">
            <%= @booking.customer_email %>
          </a>
        </div>
      <% end %>

      <% if @booking.notes.present? %>
        <div class="flex items-start gap-3 pt-2 border-t border-slate-100">
          <span class="text-slate-500 w-20">Notes:</span>
          <p class="font-medium text-slate-900 flex-1"><%= @booking.notes %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Next Steps -->
  <div class="bg-primary-50 border border-primary-100 rounded-2xl p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-3">What's Next?</h2>
    <ul class="space-y-2 text-sm text-slate-700">
      <li class="flex items-start gap-2">
        <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>A confirmation has been sent to your phone number</span>
      </li>
      <% if @booking.customer_email.present? %>
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Check your email for booking details</span>
        </li>
      <% end %>
      <li class="flex items-start gap-2">
        <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>You'll receive a reminder before your appointment</span>
      </li>
      <li class="flex items-start gap-2">
        <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <span>Please arrive 5 minutes early to your appointment</span>
      </li>
    </ul>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-3">
    <a href="<%= booking_path(@business.slug) %>" class="btn-secondary flex-1 text-center">
      Book Another Appointment
    </a>
    <button onclick="window.print()" class="btn-outline flex-1 flex items-center justify-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
      </svg>
      Print Confirmation
    </button>
  </div>
</div>
