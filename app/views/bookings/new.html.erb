<% content_for :title, "#{@business.name} - Book Appointment" %>

<div class="max-w-4xl mx-auto">
  <!-- Business Header -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
    <div class="flex items-start gap-4">
      <% if @business.logo.attached? %>
        <%= image_tag @business.logo, class: "w-16 h-16 rounded-xl object-cover" %>
      <% else %>
        <div class="w-16 h-16 rounded-xl bg-primary-100 flex items-center justify-center">
          <span class="text-2xl font-bold text-primary-600"><%= @business.name[0].upcase %></span>
        </div>
      <% end %>

      <div class="flex-1">
        <h1 class="text-2xl font-display font-bold text-slate-900"><%= @business.name %></h1>
        <% if @business.description.present? %>
          <p class="text-slate-600 mt-1"><%= @business.description %></p>
        <% end %>

        <div class="flex flex-wrap gap-4 mt-3 text-sm text-slate-500">
          <% if @business.address.present? %>
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <%= @business.address %>
            </div>
          <% end %>

          <% if @business.phone.present? %>
            <div class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <%= @business.phone %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= form_with url: "/#{@business.slug}/bookings", method: :post, data: { controller: "booking-form", booking_form_business_slug_value: @business.slug } do |form| %>
    <!-- Services Selection -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Select Services</h2>

      <div class="space-y-3">
        <% @services.each do |service| %>
          <label class="flex items-start gap-4 p-4 rounded-xl border-2 border-slate-100 hover:border-primary-200 hover:bg-primary-50/30 cursor-pointer transition-all">
            <%= check_box_tag "service_ids[]", service.id, false,
                class: "mt-1 w-5 h-5 text-primary-600 border-slate-300 rounded focus:ring-primary-500",
                data: {
                  action: "change->booking-form#updateSelection",
                  booking_form_target: "serviceCheckbox",
                  duration: service.duration_minutes,
                  price: service.price_cents
                } %>

            <div class="flex-1">
              <div class="flex items-start justify-between gap-4">
                <div>
                  <h3 class="font-medium text-slate-900"><%= service.name %></h3>
                  <% if service.description.present? %>
                    <p class="text-sm text-slate-600 mt-1"><%= service.description %></p>
                  <% end %>
                </div>
                <div class="text-right flex-shrink-0">
                  <div class="font-semibold text-slate-900"><%= number_to_currency(service.price.to_f, unit: "₫", separator: ".", delimiter: ",", format: "%n %u") %></div>
                  <div class="text-sm text-slate-500"><%= service.duration_minutes %> min</div>
                </div>
              </div>
            </div>
          </label>
        <% end %>
      </div>

      <!-- Selected Summary -->
      <div data-booking-form-target="summary" class="hidden mt-4 p-4 bg-primary-50 rounded-xl border border-primary-100">
        <div class="flex justify-between items-center text-sm">
          <span class="text-slate-600">Total Duration:</span>
          <span class="font-semibold text-slate-900" data-booking-form-target="totalDuration">0 min</span>
        </div>
        <div class="flex justify-between items-center text-sm mt-2">
          <span class="text-slate-600">Total Price:</span>
          <span class="font-semibold text-slate-900" data-booking-form-target="totalPrice">₫0</span>
        </div>
      </div>
    </div>

    <!-- Date & Time Selection -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Select Date & Time</h2>

      <div class="space-y-4">
        <!-- Date Navigation -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">Date</label>
          <div class="flex items-center gap-3">
            <button type="button"
                    data-action="click->booking-form#prevDay"
                    class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-lg border-2 border-slate-200 text-slate-700 hover:border-primary-300 hover:bg-primary-50 hover:text-primary-700 transition-all focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>

            <div class="flex-1 text-center py-2 px-4 bg-slate-50 rounded-lg border border-slate-200">
              <span data-booking-form-target="dateDisplay" class="text-base font-medium text-slate-900"></span>
            </div>

            <button type="button"
                    data-action="click->booking-form#nextDay"
                    class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-lg border-2 border-slate-200 text-slate-700 hover:border-primary-300 hover:bg-primary-50 hover:text-primary-700 transition-all focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>
          </div>

          <%= hidden_field_tag :date, nil, data: { booking_form_target: "dateInput" } %>
        </div>

        <!-- Time Slots -->
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">Available Time Slots</label>
          <label class="block text-xs font-medium text-slate-700 mb-2" data-booking-form-target="availableMessage">Please select service to see the available time</label>

          <div data-booking-form-target="timeSlotsContainer" class="hidden">
            <div data-booking-form-target="loadingSpinner" class="hidden text-center py-8">
              <div class="inline-block animate-spin rounded-full h-8 w-8 border-4 border-slate-200 border-t-primary-600"></div>
              <p class="text-sm text-slate-500 mt-2">Loading available times...</p>
            </div>

            <div data-booking-form-target="timeSlots" class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-2"></div>
          </div>

          <div data-booking-form-target="noSlotsMessage" class="hidden text-center py-8">
            <svg class="w-12 h-12 text-slate-300 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-slate-500 mt-2">No available time slots for this date</p>
          </div>
        </div>

        <%= hidden_field_tag :start_time, nil, data: { booking_form_target: "scheduledAtInput" } %>
      </div>
    </div>

    <!-- Customer Information -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6" data-booking-form-target="customerSection">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Your Information</h2>

      <% if @error.present? %>
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-xl text-red-700 text-sm">
          <%= @error %>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Full Name <span class="text-red-500">*</span>
          </label>
          <%= form.text_field "booking[customer_name]",
              class: "form-input w-full",
              placeholder: "Nguyen Van A",
              required: true %>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Phone Number <span class="text-red-500">*</span>
          </label>
          <%= form.telephone_field "booking[customer_phone]",
              class: "form-input w-full",
              placeholder: "0912345678",
              pattern: "0[0-9]{9}",
              required: true %>
          <p class="text-xs text-slate-500 mt-1">Vietnam phone number (10 digits starting with 0)</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Email (Optional)
          </label>
          <%= form.email_field "booking[customer_email]",
              class: "form-input w-full",
              placeholder: "email@example.com" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-slate-700 mb-2">
            Notes (Optional)
          </label>
          <%= form.text_area "booking[notes]",
              class: "form-input w-full",
              rows: 3,
              placeholder: "Any special requests or notes..." %>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="sticky bottom-4 bg-white rounded-2xl shadow-lg border border-slate-100 p-4">
      <%= form.submit "Confirm Booking",
          class: "btn-primary w-full",
          data: { booking_form_target: "submitButton" },
          disabled: true %>
    </div>
  <% end %>
</div>
