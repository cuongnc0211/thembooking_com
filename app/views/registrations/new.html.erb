<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Card Container -->
    <div class="card p-8 space-y-8">
      <!-- Header -->
      <div class="text-center">
        <div class="mx-auto h-12 w-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
          <svg class="h-6 w-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
          </svg>
        </div>
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2"><%= t('views.registrations.new.title') %></h1>
        <p class="text-slate-600"><%= t('views.registrations.new.subtitle') %></p>
      </div>

      <!-- Form -->
      <%= form_with model: @user, url: registration_path, data: { controller: "timezone" }, class: "space-y-6" do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-100 p-4 rounded-xl">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800"><%= t('views.registrations.new.errors_title') %></h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <%= hidden_field_tag :detected_timezone, '', id: 'detected_timezone' %>

        <!-- Email Field -->
        <div>
          <%= form.label :email_address, t('activerecord.attributes.user.email_address'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
            <%= form.email_field :email_address,
                autofocus: true,
                autocomplete: "email",
                placeholder: t('views.registrations.new.email_placeholder'),
                class: "form-input pl-10" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, t('activerecord.attributes.user.password'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <%= form.password_field :password,
                autocomplete: "new-password",
                placeholder: t('views.registrations.new.password_placeholder'),
                class: "form-input pl-10" %>
          </div>
          <p class="mt-2 text-xs text-slate-500 flex items-center">
            <svg class="h-4 w-4 mr-1 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= t('views.registrations.new.password_hint') %>
          </p>
        </div>

        <!-- Confirm Password Field -->
        <div>
          <%= form.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <%= form.password_field :password_confirmation,
                autocomplete: "new-password",
                placeholder: t('views.registrations.new.password_confirmation_placeholder'),
                class: "form-input pl-10" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= form.submit t('views.registrations.new.submit'), class: "btn-primary w-full cursor-pointer" %>
        </div>
      <% end %>

      <!-- Sign In Link -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500"><%= t('views.registrations.new.have_account') %></span>
        </div>
      </div>

      <div class="text-center">
        <%= link_to t('views.registrations.new.sign_in_link'), new_session_path, class: "btn-secondary w-full" %>
      </div>
    </div>

    <!-- Terms Notice -->
    <p class="mt-6 text-center text-xs text-slate-500">
      <%= t('views.registrations.new.terms_text') %>
      <a href="#" class="text-primary-600 hover:text-primary-500 font-medium"><%= t('views.registrations.new.terms_of_service') %></a>
      <%= t('views.registrations.new.terms_and') %>
      <a href="#" class="text-primary-600 hover:text-primary-500 font-medium"><%= t('views.registrations.new.privacy_policy') %></a>
    </p>
  </div>
</div>
