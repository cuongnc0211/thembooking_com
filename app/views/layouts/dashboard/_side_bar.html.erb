<!-- Sidebar -->
<aside data-sidebar-target="sidebar" class="
    fixed inset-y-0 left-0 z-40 w-64 
    bg-white/80 backdrop-blur-xl border-r border-slate-200/60
    transform -translate-x-full transition-transform duration-300 ease-in-out 
    md:translate-x-0 md:fixed md:top-16 md:bottom-0 md:h-[calc(100vh-4rem)]
    md:block md:w-64 md:overflow-y-auto
  ">
  
  <div class="h-full flex flex-col py-4">
    <!-- Mobile Close Button -->
    <div class="md:hidden px-4 mb-4 flex justify-end">
      <button data-action="sidebar#close" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 px-3 space-y-1.5">
      <% if current_user&.business.present? %>
        <p class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-widest mb-3 mt-2">
           <%= t('navigation.menu') %>
        </p>

        <%= link_to dashboard_business_path, class: "flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group #{(request.path == dashboard_business_path || request.path == dashboard_root_path) ? 'bg-primary-50/80 text-primary-700 shadow-sm ring-1 ring-primary-200/50' : 'text-slate-600 hover:bg-slate-50 hover:text-primary-600'}" do %>
          <svg class="mr-3 h-5 w-5 transition-colors #{ (request.path == dashboard_business_path || request.path == dashboard_root_path) ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500' }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <%= t('navigation.dashboard') %>
        <% end %>

        <%= link_to edit_dashboard_business_path, class: "flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == edit_dashboard_business_path ? 'bg-primary-50/80 text-primary-700 shadow-sm ring-1 ring-primary-200/50' : 'text-slate-600 hover:bg-slate-50 hover:text-primary-600'}" do %>
          <svg class="mr-3 h-5 w-5 transition-colors #{request.path == edit_dashboard_business_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500' }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <%= t('navigation.business_profile') %>
        <% end %>

        <%= link_to dashboard_services_path, class: "flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == dashboard_services_path ? 'bg-primary-50/80 text-primary-700 shadow-sm ring-1 ring-primary-200/50' : 'text-slate-600 hover:bg-slate-50 hover:text-primary-600'}" do %>
          <svg class="mr-3 h-5 w-5 transition-colors #{request.path == dashboard_services_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500' }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <%= t('navigation.services') %>
        <% end %>

        <%= link_to dashboard_bookings_path, class: "flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path.start_with?('/dashboard/bookings') ? 'bg-primary-50/80 text-primary-700 shadow-sm ring-1 ring-primary-200/50' : 'text-slate-600 hover:bg-slate-50 hover:text-primary-600'}" do %>
          <svg class="mr-3 h-5 w-5 transition-colors #{request.path.start_with?('/dashboard/bookings') ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500' }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <%= t('navigation.bookings') %>
        <% end %>

        <div class="mt-8 mb-2 px-4">
           <div class="h-px bg-slate-100"></div>
        </div>
        
        <p class="px-4 text-xs font-semibold text-slate-400 uppercase tracking-widest mb-3">
           <%= t('navigation.analytics') %>
        </p>

        <span class="flex items-center px-4 py-2.5 text-sm font-medium text-slate-400 cursor-not-allowed select-none group">
          <svg class="mr-3 h-5 w-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('navigation.operating_hours') %>
          <span class="ml-auto text-[10px] font-bold bg-slate-100 text-slate-500 py-0.5 px-2 rounded-full"><%= I18n.locale == :en ? "SOON" : "Sáº®P CÃ“" %></span>
        </span>
      <% end %>
    </nav>

    <!-- Footer Settings -->
    <div class="px-3 py-4 border-t border-slate-100/60 mt-auto bg-gradient-to-b from-white/0 to-white/50">
      <%= link_to edit_dashboard_profile_path, class: "flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == edit_dashboard_profile_path ? 'bg-primary-50/80 text-primary-700 shadow-sm ring-1 ring-primary-200/50' : 'text-slate-600 hover:bg-slate-50 hover:text-primary-600'}" do %>
        <svg class="mr-3 h-5 w-5 transition-colors #{request.path == edit_dashboard_profile_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500' }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <%= t('navigation.account_settings') %>
      <% end %>

      <!-- Mobile Language Switcher (Only visible on mobile) -->
      <div data-controller="dropdown" class="relative md:hidden mt-2">
        <button data-action="click->dropdown#toggle" class="flex items-center px-4 py-2.5 text-sm font-medium rounded-xl transition-all duration-200 group text-slate-600 hover:bg-slate-50 w-full text-left">
          <svg class="mr-3 h-5 w-5 text-slate-400 group-hover:text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"/>
          </svg>
          <%= t('navigation.language') %>
        </button>
        <div data-dropdown-target="menu" class="hidden mt-1 ml-4 space-y-1">
          <!-- Language options here ... reused logic -->
          <%= button_to locale_path, method: :patch, params: { locale: "en" }, class: "flex items-center w-full px-4 py-2 text-sm text-slate-600" do %>
            <span class="mr-2">ðŸ‡¬ðŸ‡§</span> English
          <% end %>
          <%= button_to locale_path, method: :patch, params: { locale: "vi" }, class: "flex items-center w-full px-4 py-2 text-sm text-slate-600" do %>
            <span class="mr-2">ðŸ‡»ðŸ‡³</span> Tiáº¿ng Viá»‡t
          <% end %>
        </div>
      </div>

      <%= button_to session_path, method: :delete, class: "flex items-center px-4 py-2.5 mt-1 text-sm font-medium rounded-xl transition-all duration-200 group text-slate-600 hover:bg-red-50 hover:text-red-600 w-full text-left cursor-pointer" do %>
        <svg class="mr-3 h-5 w-5 text-slate-400 group-hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
        <%= t('navigation.sign_out') %>
      <% end %>
    </div>
  </div>
</aside>