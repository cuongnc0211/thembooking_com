<!-- Sidebar -->
<aside class="w-64 flex-shrink-0 hidden md:block">
  <div class="h-full sticky top-24">
    <nav class="space-y-2">
      <% if current_user&.business.present? %>
        <%= link_to dashboard_business_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == dashboard_business_path ? 'bg-primary-50 text-primary-700' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm'}" do %>
