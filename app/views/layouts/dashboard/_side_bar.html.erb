      <div class="pt-6 mt-6 border-t border-slate-200">
        <%= link_to edit_dashboard_profile_path, class: "flex items-center px-4 py-3 text-sm font-medium rounded-xl transition-all duration-200 group #{request.path == edit_dashboard_profile_path ? 'bg-primary-50 text-primary-700' : 'text-slate-600 hover:bg-white hover:text-primary-600 hover:shadow-sm'}" do %>
          <svg class="mr-3 h-5 w-5 #{request.path == edit_dashboard_profile_path ? 'text-primary-600' : 'text-slate-400 group-hover:text-primary-500'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
