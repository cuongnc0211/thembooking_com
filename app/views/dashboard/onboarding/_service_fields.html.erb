<div class="border border-slate-200 rounded-xl p-4 space-y-4 mb-4 nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <%= form.hidden_field :id %>
  <%= form.hidden_field :_destroy %>

  <div class="flex justify-between items-center">
    <h4 class="font-medium text-slate-700">Service</h4>

    <% unless base_record%>
      <button type="button" class="text-red-600 hover:text-red-700 text-sm"
          data-action="click->nested-form#remove">
        Remove
      </button>
    <% end %>
  </div>

  <div>
    <%= form.label :name, "Service Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-input", placeholder: "e.g., Haircut, Massage", required: true %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <%= form.label :duration_minutes, "Duration", class: "form-label" %>
      <%= form.select :duration_minutes,
          Service.duration_options_for_select,
          { include_blank: "Select" },
          { class: "form-input", required: true } %>
    </div>
    <div>
      <%= form.label :price, "Price (VND)", class: "form-label" %>
      <div class="relative">
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500">VND</span>
        <%= form.number_field :price,
            value: form.object.price_cents || form.object.price || nil,
            class: "form-input pl-12",
            placeholder: "80000",
            min: 0,
            step: 1000,
            required: true %>
      </div>
    </div>
  </div>
</div>