<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-2">Edit Booking</h1>
    <p class="text-slate-600">Update booking information for <%= @booking.customer_name %></p>
  </div>

  <!-- Form -->
  <div class="card p-6">
    <%= form_with model: @booking, url: dashboard_booking_path(@booking), method: :patch, class: "space-y-6" do |f| %>
      <!-- Error Messages -->
      <% if @booking.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@booking.errors.count, "error") %> prevented this booking from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Services Selection -->
      <div>
        <%= f.label :service_ids, "Services *", class: "block text-sm font-medium text-slate-700 mb-2" %>
        <div class="space-y-2">
          <% @services.each do |service| %>
            <label class="flex items-start p-3 rounded-lg border border-slate-300 hover:bg-slate-50 cursor-pointer transition-colors">
              <%= f.check_box :service_ids,
                  { multiple: true, class: "mt-1 rounded border-slate-300 text-primary-600 focus:ring-primary-500", checked: @booking.services.include?(service) },
                  service.id,
                  nil %>
              <div class="ml-3 flex-1">
                <div class="font-medium text-slate-900"><%= service.name %></div>
                <div class="text-sm text-slate-500">
                  <%= service.duration_minutes %> min • <%= number_to_currency(service.price_cents / 100.0, unit: "₫", precision: 0, format: "%n %u") %>
                </div>
              </div>
            </label>
          <% end %>
        </div>
        <% if @booking.errors[:services].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @booking.errors[:services].first %></p>
        <% end %>
      </div>

      <!-- Customer Name -->
      <div>
        <%= f.label :customer_name, "Customer Name *", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_field :customer_name,
            class: "w-full rounded-lg border-slate-300 focus:border-primary-500 focus:ring-primary-500",
            placeholder: "Enter customer name" %>
        <% if @booking.errors[:customer_name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @booking.errors[:customer_name].first %></p>
        <% end %>
      </div>

      <!-- Customer Phone -->
      <div>
        <%= f.label :customer_phone, "Phone Number *", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_field :customer_phone,
            class: "w-full rounded-lg border-slate-300 focus:border-primary-500 focus:ring-primary-500",
            placeholder: "0912345678",
            pattern: "0[0-9]{9}",
            type: "tel" %>
        <p class="mt-1 text-xs text-slate-500">Vietnamese phone format (10 digits starting with 0)</p>
        <% if @booking.errors[:customer_phone].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @booking.errors[:customer_phone].first %></p>
        <% end %>
      </div>

      <!-- Customer Email -->
      <div>
        <%= f.label :customer_email, "Email (Optional)", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.email_field :customer_email,
            class: "w-full rounded-lg border-slate-300 focus:border-primary-500 focus:ring-primary-500",
            placeholder: "customer@example.com" %>
        <% if @booking.errors[:customer_email].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @booking.errors[:customer_email].first %></p>
        <% end %>
      </div>

      <!-- Notes -->
      <div>
        <%= f.label :notes, "Notes (Optional)", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_area :notes,
            rows: 3,
            class: "w-full rounded-lg border-slate-300 focus:border-primary-500 focus:ring-primary-500",
            placeholder: "Any special requests or notes..." %>
        <% if @booking.errors[:notes].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @booking.errors[:notes].first %></p>
        <% end %>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-4 border-t border-slate-200">
        <%= link_to "Cancel", dashboard_booking_path(@booking), class: "text-slate-600 hover:text-slate-800 font-medium" %>
        <%= f.submit "Update Booking", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
