<div class="max-w-4xl mx-auto mt-8 px-4">
  <!-- Header -->
  <div class="flex justify-between items-start mb-8">
    <div class="flex items-center space-x-4">
      <% if @business.logo.attached? %>
        <%= image_tag @business.logo.variant(resize_to_limit: [80, 80]), class: "h-20 w-20 rounded-lg object-cover" %>
      <% else %>
        <div class="h-20 w-20 rounded-lg bg-gray-200 flex items-center justify-center">
          <span class="text-2xl text-gray-400"><%= @business.name.first.upcase %></span>
        </div>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold"><%= @business.name %></h1>
        <p class="text-gray-500"><%= @business.business_type.titleize %></p>
      </div>
    </div>
    <%= link_to "Edit Business", edit_dashboard_business_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
  </div>

  <!-- Booking URL -->
  <div class="bg-primary-50 border border-primary-200 rounded-xl p-6 mb-8">
    <p class="text-sm font-medium text-primary-900 mb-2">Your Booking URL</p>
    <div class="flex items-center space-x-2">
      <code class="bg-white px-4 py-3 rounded-lg border border-primary-100 text-primary-700 flex-1 font-mono text-sm"><%= @business.booking_url %></code>
      <button class="btn-primary py-2 px-4 text-sm" onclick="navigator.clipboard.writeText('<%= @business.booking_url %>')">
        Copy
      </button>
    </div>
    <p class="mt-2 text-sm text-primary-700">Share this link with your customers to let them book appointments.</p>
  </div>

  <!-- Business Details -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Description -->
    <div class="card p-6">
      <h3 class="text-lg font-semibold mb-2">Description</h3>
      <% if @business.description.present? %>
        <p class="text-slate-600"><%= @business.description %></p>
      <% else %>
        <p class="text-slate-400 italic">No description added yet.</p>
      <% end %>
    </div>

    <!-- Contact Info & Capacity -->
    <div class="card p-6">
      <h3 class="text-lg font-semibold mb-2">Contact Information</h3>
      <dl class="space-y-2">
        <% if @business.address.present? %>
          <div>
            <dt class="text-sm text-slate-500">Address</dt>
            <dd class="text-slate-900"><%= @business.address %></dd>
          </div>
        <% end %>
        <% if @business.phone.present? %>
          <div>
            <dt class="text-sm text-slate-500">Phone</dt>
            <dd class="text-slate-900"><%= @business.phone %></dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm text-slate-500">Capacity</dt>
          <dd class="text-slate-900">
            <%= @business.capacity %>
            <span class="text-sm text-slate-500">
              <%= @business.capacity == 1 ? "client" : "clients" %> at a time
            </span>
          </dd>
        </div>
        <% if @business.address.blank? && @business.phone.blank? %>
          <p class="text-slate-400 italic">No contact info added yet.</p>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Operating Hours -->
  <div class="mt-8 card p-6">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-semibold">Operating Hours</h3>
      <%= link_to "Edit Hours", edit_dashboard_business_path, class: "text-sm text-primary-600 hover:text-primary-700" %>
    </div>

    <div class="space-y-3">
      <% Business::WEEKDAYS.each do |day| %>
        <% day_hours = @business.hours_for(day) %>
        <% if day_hours %>
          <div class="flex items-start justify-between py-2 border-b border-slate-100 last:border-0">
            <div class="flex-1">
              <span class="font-medium text-slate-700 capitalize inline-block w-28"><%= day %></span>
              <% if day_hours["closed"] %>
                <span class="text-slate-400 italic">Closed</span>
              <% else %>
                <span class="text-slate-900">
                  <%= day_hours["open"] %> - <%= day_hours["close"] %>
                </span>

                <% breaks = day_hours["breaks"] || [] %>
                <% if breaks.any? %>
                  <div class="ml-28 mt-1">
                    <span class="text-xs text-slate-500 uppercase">Breaks:</span>
                    <% breaks.each do |break_period| %>
                      <span class="text-sm text-slate-600 ml-2">
                        <%= break_period["start"] %> - <%= break_period["end"] %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Quick Stats Placeholder -->
  <div class="mt-8 card p-6 bg-slate-50 border-slate-200">
    <h3 class="text-lg font-semibold mb-4">Dashboard</h3>
    <p class="text-slate-500">Your booking dashboard will appear here once you add services and start accepting bookings.</p>
    <div class="mt-4">
      <span class="inline-block bg-slate-200 text-slate-600 px-3 py-1 rounded-full text-sm">Coming Soon: Bookings Overview</span>
    </div>
  </div>
</div>
