<%= form_with model: business, url: dashboard_business_path, method: (business.persisted? ? :patch : :post), class: "space-y-6" do |form| %>
  <% if business.errors.any? %>
    <div class="bg-red-50 border border-red-100 text-red-700 px-4 py-3 rounded-xl">
      <ul class="list-disc list-inside">
        <% business.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Logo Upload -->
  <div>
    <%= form.label :logo, "Business Logo", class: "form-label" %>
    <div class="mt-2 p-4 border-2 border-dashed border-slate-200 rounded-xl hover:border-primary-400 transition-colors bg-slate-50/50">
      <% if business.logo.attached? %>
        <div class="flex items-center space-x-6">
          <%= image_tag business.logo.variant(resize_to_limit: [100, 100]), class: "h-20 w-20 rounded-lg object-cover shadow-sm" %>
          <div>
            <%= form.file_field :logo, class: "hidden", id: "logo-upload" %>
            <label for="logo-upload" class="btn-secondary py-2 px-4 text-sm cursor-pointer">
              Change Logo
            </label>
            <p class="mt-2 text-xs text-slate-500">JPEG, PNG, GIF, or WebP. Max 5MB.</p>
          </div>
        </div>
      <% else %>
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-slate-300" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="mt-4 flex text-sm text-slate-600 justify-center">
            <label for="logo-upload" class="relative cursor-pointer rounded-md font-medium text-primary-600 hover:text-primary-500 focus-within:outline-none">
              <span>Upload a file</span>
              <%= form.file_field :logo, class: "sr-only", id: "logo-upload" %>
            </label>
            <p class="pl-1">or drag and drop</p>
          </div>
          <p class="text-xs text-slate-500">PNG, JPG, GIF up to 5MB</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Business Name -->
  <div>
    <%= form.label :name, "Business Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-input", placeholder: "e.g., John's Barbershop" %>
  </div>

  <!-- Business Type -->
  <div>
    <%= form.label :business_type, "Business Type", class: "form-label" %>
    <%= form.select :business_type, Business.business_types.keys.map { |t| [t.titleize, t] }, { prompt: "Select business type" }, class: "form-input" %>
  </div>

  <!-- Booking URL (Slug) -->
  <div>
    <%= form.label :slug, "Booking URL", class: "form-label" %>
    <div class="mt-1 flex rounded-xl shadow-sm">
      <%= form.text_field :slug, class: "flex-1 form-input rounded-r-none border-r-0 focus:ring-0", placeholder: "your-shop-name" %>
      <span class="inline-flex items-center px-4 rounded-r-xl border border-l-0 border-slate-200 bg-slate-50 text-slate-500 text-sm font-medium">
        .thembooking.com
      </span>
    </div>
    <p class="mt-1.5 text-sm text-slate-500">Only lowercase letters, numbers, and hyphens. This will be your public booking URL.</p>
  </div>

  <!-- Description -->
  <div>
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-input", placeholder: "Tell customers about your business..." %>
  </div>

  <!-- Address -->
  <div>
    <%= form.label :address, "Address", class: "form-label" %>
    <%= form.text_field :address, class: "form-input", placeholder: "123 Main St, Ho Chi Minh City" %>
  </div>

  <!-- Phone -->
  <div>
    <%= form.label :phone, "Phone Number", class: "form-label" %>
    <%= form.telephone_field :phone, class: "form-input", placeholder: "+84 123 456 789" %>
  </div>

  <!-- Capacity -->
  <div>
    <%= form.label :capacity, "Capacity", class: "form-label" %>
    <%= form.number_field :capacity, class: "form-input", min: 1, max: 50, placeholder: "e.g., 3" %>
    <p class="mt-1.5 text-sm text-slate-500">How many customers can you serve at the same time?</p>
  </div>

  <!-- Operating Hours Section -->
  <div class="space-y-4" data-controller="operating-hours">
    <h3 class="text-lg font-semibold text-slate-900">Operating Hours</h3>
    <p class="text-sm text-slate-500">Set your business hours and break times for each day</p>

    <% Business::WEEKDAYS.each do |day| %>
      <% day_hours = business.operating_hours&.dig(day) || {} %>
      <% is_closed = day_hours["closed"] || false %>
      <% breaks = day_hours["breaks"] || [] %>

      <div class="border border-slate-200 rounded-lg p-4 space-y-3">
        <!-- Day Header with Open/Close Times -->
        <div class="flex items-center gap-4">
          <label class="w-28 text-sm font-medium text-slate-700 capitalize"><%= day %></label>

          <%= form.time_field "operating_hours[#{day}][open]",
                value: day_hours["open"],
                class: "form-input w-32",
                disabled: is_closed,
                data: { operating_hours_target: "#{day}Open" } %>

          <span class="text-slate-500">to</span>

          <%= form.time_field "operating_hours[#{day}][close]",
                value: day_hours["close"],
                class: "form-input w-32",
                disabled: is_closed,
                data: { operating_hours_target: "#{day}Close" } %>

          <%= form.check_box "operating_hours[#{day}][closed]",
                checked: is_closed,
                class: "ml-4 h-4 w-4 rounded border-slate-300",
                data: {
                  operating_hours_target: "#{day}Closed",
                  action: "change->operating-hours#toggleDay",
                  day: day
                } %>

          <%= form.label "operating_hours[#{day}][closed]", "Closed", class: "ml-2 text-sm text-slate-600" %>
        </div>

        <!-- Break Times -->
        <div class="ml-32 space-y-2" data-operating-hours-target="<%= day %>Breaks">
          <label class="text-xs font-medium text-slate-600 uppercase">Break Times</label>

          <div class="space-y-2">
            <% breaks.each_with_index do |break_period, index| %>
              <div class="flex items-center gap-2" data-operating-hours-target="breakRow">
                <%= form.time_field "operating_hours[#{day}][breaks][][start]",
                      value: break_period["start"],
                      class: "form-input w-28 text-sm",
                      placeholder: "Start",
                      disabled: is_closed %>

                <span class="text-slate-400 text-sm">to</span>

                <%= form.time_field "operating_hours[#{day}][breaks][][end]",
                      value: break_period["end"],
                      class: "form-input w-28 text-sm",
                      placeholder: "End",
                      disabled: is_closed %>

                <button type="button"
                        class="text-red-600 hover:text-red-700 text-sm"
                        data-action="click->operating-hours#removeBreak">
                  Remove
                </button>
              </div>
            <% end %>
          </div>

          <button type="button"
                  class="text-sm text-primary-600 hover:text-primary-700"
                  data-action="click->operating-hours#addBreak"
                  data-day="<%= day %>"
                  <%= 'disabled' if is_closed %>>
            + Add Break Time
          </button>
        </div>
      </div>
    <% end %>

    <!-- Break Template (hidden, used by Stimulus) -->
    <template data-operating-hours-target="breakTemplate">
      <div class="flex items-center gap-2" data-operating-hours-target="breakRow">
        <input type="time"
               name="business[operating_hours][DAY_PLACEHOLDER][breaks][][start]"
               class="form-input w-28 text-sm"
               placeholder="Start">

        <span class="text-slate-400 text-sm">to</span>

        <input type="time"
               name="business[operating_hours][DAY_PLACEHOLDER][breaks][][end]"
               class="form-input w-28 text-sm"
               placeholder="End">

        <button type="button"
                class="text-red-600 hover:text-red-700 text-sm"
                data-action="click->operating-hours#removeBreak">
          Remove
        </button>
      </div>
    </template>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-end pt-4 border-t border-slate-100">
    <%= form.submit business.persisted? ? "Save Changes" : "Create Business", class: "btn-primary cursor-pointer" %>
  </div>
<% end %>
