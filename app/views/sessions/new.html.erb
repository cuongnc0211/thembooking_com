<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Card Container -->
    <div class="card p-8 space-y-8">
      <!-- Header -->
      <div class="text-center">
        <div class="mx-auto h-12 w-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
          <svg class="h-6 w-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2"><%= t('views.sessions.new.title') %></h1>
        <p class="text-slate-600"><%= t('views.sessions.new.subtitle') %></p>
      </div>

      <!-- Form -->
      <%= form_with url: session_url, class: "space-y-6" do |form| %>
        <!-- Email Field -->
        <div>
          <%= form.label :email_address, t('activerecord.attributes.user.email_address'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
            <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: t('views.sessions.new.email_placeholder'),
                value: params[:email_address],
                class: "form-input pl-10" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= form.label :password, t('activerecord.attributes.user.password'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: t('views.sessions.new.password_placeholder'),
                maxlength: 72,
                class: "form-input pl-10" %>
          </div>
        </div>

        <!-- Forgot Password Link -->
        <div class="flex items-center justify-end">
          <%= link_to t('views.sessions.new.forgot_password'), new_password_path, class: "text-sm font-medium text-primary-600 hover:text-primary-500 transition duration-150 ease-in-out" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit t('views.sessions.new.submit'), class: "btn-primary w-full cursor-pointer" %>
        </div>
      <% end %>

      <!-- Sign Up Link -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500"><%= t('views.sessions.new.no_account') %></span>
        </div>
      </div>

      <div class="text-center">
        <%= link_to t('views.sessions.new.sign_up_link'), new_registration_path, class: "btn-secondary w-full" %>
      </div>
    </div>
  </div>
</div>
