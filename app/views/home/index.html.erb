<% if authenticated? && !Current.user.profile_completed %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-blue-900 mb-2">Complete Your Profile</h3>
      <p class="text-blue-700 mb-4">
        Get the most out of Bukmeup by completing your profile. Add your name, timezone, and photo.
      </p>
      <%= link_to "Complete Profile →", edit_profile_path,
          class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>
  </div>
<% end %>

<div class="max-w-4xl mx-auto p-8">
