<% if authenticated? && Current.user.business.nil? %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
    <div class="bg-gradient-to-r from-primary-50 to-accent-50 border border-primary-100 rounded-2xl p-8 relative overflow-hidden">
      <div class="relative z-10">
        <h3 class="text-xl font-display font-bold text-primary-900 mb-2">Set Up Your Business</h3>
        <p class="text-primary-700 mb-6 max-w-2xl">
          Get started with ThemBooking by creating your business profile. Add your business name, services, and start accepting bookings in minutes.
        </p>
        <%# TODO: Link to business setup when implemented %>
        <button class="btn-primary shadow-lg shadow-primary-500/20" disabled>
          Coming Soon
        </button>
      </div>
      <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-primary-200 rounded-full blur-3xl opacity-50"></div>
    </div>
  </div>
<% end %>

<!-- Hero Section -->
<div class="relative overflow-hidden pt-16 pb-24">
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full z-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary-300 rounded-full blur-[100px] opacity-30 animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-300 rounded-full blur-[100px] opacity-30 animate-pulse delay-1000"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto text-center px-4">
    <span class="inline-block py-1 px-3 rounded-full bg-primary-50 text-primary-600 text-sm font-medium mb-6 border border-primary-100">
      New: Rails 8.1 + Solid Trio
    </span>
    <h1 class="text-5xl md:text-7xl font-display font-bold tracking-tight text-slate-900 mb-8">
      Booking made <span class="text-gradient">simple</span> and <span class="text-gradient">beautiful</span>.
    </h1>
    <p class="text-xl text-slate-600 mb-10 max-w-2xl mx-auto leading-relaxed">
      ThemBooking is the modern way to manage appointments. Built with the latest tech stack for speed, reliability, and a premium user experience.
    </p>
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <% if authenticated? %>
        <%= link_to "Go to Dashboard", "#", class: "btn-primary w-full sm:w-auto text-lg px-8 py-4" %>
      <% else %>
        <%= link_to "Get Started Free", new_registration_path, class: "btn-primary w-full sm:w-auto text-lg px-8 py-4 shadow-xl shadow-primary-500/20" %>
        <%= link_to "Learn More", "#", class: "btn-secondary w-full sm:w-auto text-lg px-8 py-4" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Features Grid -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Feature 1 -->
    <div class="card p-8 card-hover group">
      <div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
        <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
      </div>
      <h3 class="text-xl font-display font-bold text-slate-900 mb-3">Lightning Fast</h3>
      <p class="text-slate-600 leading-relaxed">
        Powered by Rails 8 and Solid Cache, experience instant page loads and snappy interactions.
      </p>
    </div>

    <!-- Feature 2 -->
    <div class="card p-8 card-hover group">
      <div class="w-12 h-12 bg-accent-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
        <svg class="w-6 h-6 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path></svg>
      </div>
      <h3 class="text-xl font-display font-bold text-slate-900 mb-3">Modern Stack</h3>
      <p class="text-slate-600 leading-relaxed">
        Built with Importmap, Tailwind CSS, and PostgreSQL. No complex build steps, just pure productivity.
      </p>
    </div>

    <!-- Feature 3 -->
    <div class="card p-8 card-hover group">
      <div class="w-12 h-12 bg-teal-50 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
        <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>
      </div>
      <h3 class="text-xl font-display font-bold text-slate-900 mb-3">Secure & Reliable</h3>
      <p class="text-slate-600 leading-relaxed">
        Enterprise-grade security with bcrypt and secure password handling out of the box.
      </p>
    </div>
  </div>
</div>

