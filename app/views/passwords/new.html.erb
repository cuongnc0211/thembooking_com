<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <!-- Card Container -->
    <div class="card p-8 space-y-8">
      <!-- Header -->
      <div class="text-center">
        <div class="mx-auto h-12 w-12 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
          <svg class="h-6 w-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
          </svg>
        </div>
        <h1 class="text-3xl font-display font-bold text-slate-900 mb-2"><%= t('views.passwords.new.title') %></h1>
        <p class="text-slate-600"><%= t('views.passwords.new.subtitle') %></p>
      </div>

      <!-- Form -->
      <%= form_with url: passwords_path, class: "space-y-6" do |form| %>
        <!-- Email Field -->
        <div>
          <%= form.label :email_address, t('activerecord.attributes.user.email_address'), class: "form-label" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
            </div>
            <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: t('views.passwords.new.email_placeholder'),
                value: params[:email_address],
                class: "form-input pl-10" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= form.submit t('views.passwords.new.submit'), class: "btn-primary w-full cursor-pointer" %>
        </div>
      <% end %>

      <!-- Back to Sign In Link -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-200"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500"><%= t('views.passwords.new.remember_password') %></span>
        </div>
      </div>

      <div class="text-center">
        <%= link_to new_session_path, class: "btn-secondary w-full flex items-center justify-center gap-2" do %>
          <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t('views.passwords.new.sign_in_link') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
