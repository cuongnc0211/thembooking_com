<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="max-w-md w-full">
    <!-- Card Container -->
    <div class="bg-white rounded-2xl shadow-xl p-8 space-y-6">
      <!-- Header -->
      <div class="text-center">
        <div class="mx-auto h-12 w-12 bg-blue-600 rounded-xl flex items-center justify-center mb-4">
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= t('views.passwords.edit.title') %></h1>
        <p class="text-gray-600"><%= t('views.passwords.edit.subtitle') %></p>
      </div>

      <!-- Form -->
      <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-5" do |form| %>
        <!-- New Password Field -->
        <div>
          <%= form.label :password, t('activerecord.attributes.user.password'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <%= form.password_field :password,
                required: true,
                autofocus: true,
                autocomplete: "new-password",
                placeholder: t('views.passwords.edit.password_placeholder'),
                maxlength: 72,
                class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
          <p class="mt-2 text-xs text-gray-500 flex items-center">
            <svg class="h-4 w-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= t('views.passwords.edit.password_hint') %>
          </p>
        </div>

        <!-- Confirm Password Field -->
        <div>
          <%= form.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <%= form.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                placeholder: t('views.passwords.edit.password_confirmation_placeholder'),
                maxlength: 72,
                class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out sm:text-sm" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-2">
          <%= form.submit t('views.passwords.edit.submit'), class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out cursor-pointer" %>
        </div>
      <% end %>

      <!-- Back to Sign In Link -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-gray-500"><%= t('views.passwords.edit.remember_password') %></span>
        </div>
      </div>

      <div class="text-center">
        <%= link_to new_session_path, class: "inline-flex items-center justify-center w-full py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
          <svg class="h-5 w-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t('views.passwords.edit.sign_in_link') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
